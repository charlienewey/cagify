{
    "manifest_version": 2,

    "name": "DeTrumpifier",
    "description": "This extension attempts to purge Donald Trump from a user's browser. Simple.",
    "version": "0.1.1",

    "browser_action": {
        "default_icon": "res/img/icon.png"
    },

    "background": {
        "scripts": [
            "./src/js/background.js"
        ]
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["./src/js/filter.js"],
            "run_at": "document_idle"
        }
    ],

    "permissions": [
        "activeTab",
        "storage"
    ]
}
